<assembly>
    <id>runnable</id>
    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <!-- Application jar -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- Application libs -->
        <fileSet>
            <directory>target/libs</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- Other files -->
        <fileSet>
            <directory>exec</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../extra</directory>
            <outputDirectory>extra</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>